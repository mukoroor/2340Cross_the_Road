<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".StartScreenActivity">


    <!--Layouts for the start screen-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/gameImage"
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:gravity="center_vertical">

            <!--The image for laHava-->
            <ImageView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="10"
                android:background="@drawable/startscreen"/>

        </TableRow>

        <TableRow
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center_vertical">

            <!--The start button-->
            <RelativeLayout
                android:id="@+id/quitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="42.75dp"
                android:background="@drawable/button2x1"
                android:gravity="center"
                android:elevation="100dp">

                <TextView
                    style="@style/text"
                    android:text="@string/quit"
                    android:textColor="#000000"
                    android:translationX="2.1sp"
                    android:translationY="2.1sp"
                    android:textSize="21sp" />
                <TextView
                    style="@style/text"
                    android:layout_gravity="center"
                    android:text="@string/quit"
                    android:textSize="21sp"
                    />
            </RelativeLayout>

            <!--The exit button-->
            <RelativeLayout
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="128.25dp"
                android:background="@drawable/button2x1"
                android:gravity="center">

                <TextView
                    style="@style/text"
                    android:text="@string/play"
                    android:textColor="#000000"
                    android:translationX="2.1sp"
                    android:translationY="2.1sp"
                    android:textSize="21sp" />
                <TextView
                    style="@style/text"
                    android:layout_gravity="center"
                    android:text="@string/play"
                    android:textSize="21sp"
                    />
            </RelativeLayout>

        </TableRow>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
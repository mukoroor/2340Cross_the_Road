<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CF1020"
    tools:context=".SpriteSelector"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/volcano">

        <TableRow
            android:id="@+id/characterGallery"
            android:layout_width="match_parent"
            android:layout_height="549dp">

            <Button
                android:id="@+id/leftButton"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/leftarrow"
                android:foreground="@drawable/leftarrow"
                android:translationX="25dp" />

            <ImageView
                android:id="@+id/spriteView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/man1" />

            <Button
                android:id="@+id/rightButton"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rightarrow"
                android:foreground="@drawable/rightarrow"
                android:translationX="-25dp" />

        </TableRow>

        <TextView
            style="@style/text"
            android:id="@+id/spriteDescription"
            android:layout_width="match_parent"
            android:text="MAN"
            android:textSize="50sp" />

        <TableRow
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="182dp">

            <TextView
                style="@style/button2x1"
                android:id="@+id/returnButton"
                android:text="RETURN"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:translationX="42.75dp" />

            <TextView
                style="@style/button2x1"
                android:id="@+id/submitButton"
                android:text="SUBMIT"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:translationX="128.25dp" />

        </TableRow>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>